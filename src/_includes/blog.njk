</head>
<body>

 {% include "navbar.njk" %} 
 <p class="blog-path-map"><span class="fixed-blog-path">home  / blog</span> / {{post.title}}</p>
 <div id="blog-details-icon-container">
              <a class="share-btn" id="instagram-share" target="_blank">
                <img
                  class="blog-details-icon-img"
                  src="/assets/icons/instaIcon.svg"
                  alt="Share on instagram"
                />
              </a>
              <a class="share-btn" id="linkedin-share" target="_blank">
                <img
                  class="blog-details-icon-img"
                  src="/assets/icons/linkedinIcon.svg"
                  alt="Share on linkedin"
                />
              </a>
              <a class="share-btn" id="facebook-share" target="_blank">
                <img
                  class="blog-details-icon-img"
                  src="/assets/icons/facebook-icon.svg"
                  alt="Share on Facebook"
                />
              </a>
              <a class="share-btn" id="whatsapp-share" target="_blank">
                <img
                  class="blog-details-icon-img"
                  src="/assets/icons/whatsapp-icon.svg"
                  alt="share on WhatsApp"
                />
              </a>
            </div>
  <section class="blog-details-outer-container">
  <section class="blog-details-container">
  <div class="back-to-articles-container">
  <span>←</span> 
  <a href="/" class="back-to-articles">back to articles</a>
  </div>
  <p id="blogs-category">{{post.category}}</p>
    <h1 id="blog-details-title">{{ post.title }}</h1>
    <p id="blog-excerpt">{{ post.excerpt }}</p>
    <p id="author-details">By {{ post.author }}  · {{ post.publishedAt | date("MMMM d, yyyy") }}</p>
    <div class="blog-image-container">
    <img id="blog-image" src="/assets/images/{{post.featuredImage }}" alt="{{post.title}} - {{post.excerpt}}" />
    </div>
    <div class="content">
      {{ post.content | safe }}
    </div>
  </section>
  {% include "footer.njk" %} 
  </section>
   
   <script src="/js/index.js"></script>
</body>
</html>
