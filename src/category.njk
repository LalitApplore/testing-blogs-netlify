---
pagination:
  data: categories
  size: 1
  alias: category
permalink: "/category/{{ category | slugify  }}/index.html"
---

{% extends "base.njk" %}

{% block content %}

{% include "category-list.njk" %} 
  <div class="all-blogs-list">

    {% for post in blogs %}
      {% if post.Categories[0] == category %}
        <div class="single-blog-container">
  <a class="single-blog-link"  href="/{{ post.Slug }}">
     <img 
  class="blog-thumbnail"
  src="/assets/images/{{ (loop.index % 10) + 1 }}.webp" 
  alt="{{ post.Title }} - {{ post.Excerpt | safe }}"
  {% if loop.index > 2 %}
    loading="lazy"
  {% else %}
    loading="eager" fetchpriority="high"
  {% endif %}
>
  <div class="single-blog-text-container">
  <p id="blog-date">{{ post.PublishedAt | date("MMMM d, yyyy") }}
  </p>
  <h4 id="blog-title">{{ post.Title | truncate }}</h4>
  <p id="blog-data-excerpt">{{ post.Excerpt }}</p >
  <p id="read-more-btn">Read more <span>â†’</span></p>
  </div>
  </a>
  </div>
      {% endif %}
    {% endfor %}
  </div>
{% endblock %}


